<div id="login-span">
    <div id="login-toolbar">
    <% if current_user %>
      <a id="logout-link" href="/logout">Logout</a>
    <% else %>
      <% if !@error%>
      <a id="login-link" href="/sessions/new">Login</a>
      <a id="signup-link" href="users/new">Signup</a>
      <% end %>
    <% end %>
    </div>
</div>
